{
  "name": "markdown-viewer-with-mermaid_chrome-plugin",
  "version": "1.1.0",
  "type": "commonjs",
  "description": "",
  "main": "background.js",
  "directories": {
    "doc": "doc",
    "lib": "lib"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,yml,yaml,ts}\"",
    "format:check": "prettier --check \"**/*.{js,json,yml,yaml,ts}\"",
    "type-check": "tsc --noEmit",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "validate": "npm run lint && npm run format:check && npm run type-check && npm run test:ci",
    "build": "npm run validate && npm run docs",
    "package": "web-ext build --source-dir=. --artifacts-dir=build --ignore-files=node_modules package*.json tsconfig.json typedoc.json analysis-reports archive performance-test.html tests jest.config.js coverage",
    "dev": "web-ext run --source-dir=. --target=chromium",
    "start-firefox": "web-ext run --source-dir=. --target=firefox-desktop",
    "package:chrome": "npm run build && npm run package",
    "clean": "rm -rf build web-ext-artifacts coverage dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/76Hata/markdown-viewer-with-mermaid_chrome-plugin.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/76Hata/markdown-viewer-with-mermaid_chrome-plugin/issues"
  },
  "homepage": "https://github.com/76Hata/markdown-viewer-with-mermaid_chrome-plugin#readme",
  "devDependencies": {
    "@types/chrome": "^0.1.4",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typedoc": "^0.28.9",
    "typescript": "^5.9.2",
    "web-ext": "^8.9.0"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "marked": "^5.1.1",
    "mermaid": "^10.0.0"
  }
}
