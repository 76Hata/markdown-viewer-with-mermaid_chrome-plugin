{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["./*.js", "./js/*.js"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "docs",
    "coverage",
    "doc",
    "lib",
    "test*.js",
    "debug*.js",
    "verify*.js",
    "*-test.md",
    "*-debug.md",
    "*.min.js"
  ]
}
